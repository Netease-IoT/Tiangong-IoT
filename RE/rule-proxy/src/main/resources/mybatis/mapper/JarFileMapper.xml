<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.netease.iot.rule.proxy.mapper.JarFileMapper">

    <resultMap id="BaseResultMap" type="com.netease.iot.rule.proxy.domain.JarFile">
        <id column="jar_id" property="id"/>
        <result column="product" property="product"/>
        <result column="file_path" property="filePath"/>
        <result column="file_name" property="fileName"/>
        <result column="jar_size" property="jarSize"/>
        <result column="explanation" property="explanation"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Table">jar_file</sql>

    <sql id="ColumnList">
        jar_id, product, file_path, file_name, jar_size, explanation, create_time
    </sql>

    <select id="listByProduct" resultMap="BaseResultMap">
        SELECT
        <include refid="ColumnList"/>
        FROM
        <include refid="Table"/>
        WHERE product=#{product}
    </select>

    <insert id="insertJar">
        INSERT INTO
        <include refid="Table"/>
        (jar_id, product, file_path, file_name, jar_size, explanation, create_time)
        VALUES
        (#{jarId}, #{product}, #{filePath}, #{fileName}, #{jarSize}, #{explanation}, #{createTime})
    </insert>

    <select id="getJar" resultMap="BaseResultMap">
        SELECT
        <include refid="ColumnList"/>
        FROM
        <include refid="Table"/>
        WHERE jar_id = #{jarId}
    </select>

    <delete id="removeJar">
        DELETE FROM
        <include refid="Table"/>
        WHERE jar_id = #{jarId}
    </delete>
</mapper>
